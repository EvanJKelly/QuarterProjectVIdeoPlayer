@model QuatorProjectVIdeoPlayer.Models.Video

@{
    ViewData["Title"] = "uploadVideo";
}

<h1>Upload a Video</h1>

<form asp-action="uploadVideo" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" style="width:400px;">
        <label asp-for="VideoTitle" class="control-label"></label>
        <input asp-for="VideoTitle" class="form-control" />
        <span asp-validation-for="VideoTitle" class="text-danger"></span>
    </div>
    @*this is where video upload will go *@
    <div class="form-group">
        <label asp-for="VideoLink" class="control-label"></label>
        <input asp-for="VideoLink" class="form-control" />
        <span asp-validation-for="VideoLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thumbnail" class="control-label"></label>
        <input type="file" name="thumbnail" />
    </div>
    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="Account" asp-action="MyVideos">Back to My Videos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}